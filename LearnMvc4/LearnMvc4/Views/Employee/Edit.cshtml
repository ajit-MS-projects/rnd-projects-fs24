@using LearnMvc4.Models
@model LearnMvc4.Models.Employee

@{
    ViewBag.Title = "Edit";
}

@{
    var enumVals = from Designations e in Enum.GetValues(typeof (Designations)) select new {Id = e, Name = e.ToString()};
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Employee</legend>
        @ViewBag.xxx
        @ViewData["uu"]

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Salary)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Salary)
            @Html.ValidationMessageFor(model => model.Salary)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Department)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Department)
            @Html.ValidationMessageFor(model => model.Department)
        </div>
        
        <div class="editor-label">
           @Html.LabelFor(model => model.Designation)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Designation,new SelectList(enumVals,"Id","Name"))
            @Html.ValidationMessageFor(model => model.Designation)
        </div>
        
        
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

