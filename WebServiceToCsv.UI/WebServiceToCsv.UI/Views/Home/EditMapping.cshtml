@model WebServiceToCsv.Contracts.IMapping

@{
    ViewBag.Title = "EditMapping";
}

<h2>EditMapping</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Mapping</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.SourceProperty)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.SourceProperty, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.SourceProperty)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DestinationField)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DestinationField)
            @Html.ValidationMessageFor(model => model.DestinationField)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExportId)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ExportId, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.ExportId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
